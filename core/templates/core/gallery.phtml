{% extends "core/base.phtml" %}
{% load staticfiles %}
{% block title %}{{ gallery.title }}{% endblock %}
{% block description %}{{ gallery.description }}{% endblock %}
{% block content %}
<img class="gallery_big_image" src="{{ image.base_file.url }}" alt="{{ image.name }}">
<div class="gallery_control_left gallery_control">
    <a class="last_image_control" href="">last</a>
</div>
<div class="gallery_control_right gallery_control">
    <a class="next_image_control" href="">next</a>
</div>
<div class="gallery_control_center gallery_control">
    <a class="back_to_site_control" href="../../">exit</a>
</div>
<div class="image_info gallery_control">
    <div class="image_info_left">
    <p class="image_name">{{ image.name }}</p>
    <hr/>
    <p class="image_take_date">{{ taketime }}</p>
    <p class="image_place">{{ image.place }}</p>
    <hr/>
    <p class="image_description">{{ image.description }}</p>
    </div>
    <div class="image_info_right">

    <p class="image_info_meta">Fotograf: {{ artist }}</p>
    <p class="image_info_meta">Lizenz: {{ copyright }}</p>
    <p class="image_info_meta">ISO: {{ iso }}</p>
    <p class="image_info_meta">Belichtungszeit: {{ exposure_time }}s</p>
    <p class="image_info_meta">Brennweite: {{ focal_length }}mm</p>
    <p class="image_info_meta">Brennweite Kleinbild: {{ fl35 }}mm</p>
    <p class="image_info_meta">Kamera: {{ make }} - {{ model }}</p>
    </div>
    <div class=".image_info_clear"/>
</div>
</img>
{% endblock %}
