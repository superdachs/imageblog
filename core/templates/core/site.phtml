{% extends "core/base.phtml" %}
{% load staticfiles %}
{% block title %}{{ site.title }}{% endblock %}
{% block description %}{{ site.description }}{% endblock %}
{% block content %}
<h1>{{ site.title }}</h1>
<h2>{{ site.subtitle }}</h2>
<p>{{ site.description }}</p>
<hr/>
{% for article in articles %}
    <p>
        <h3>{{ article.title }}</h3>
        <h4>{{ article.subtitle }}</h4>
        <p>{{ article.description }}</p>
        <p>{{ article.content|truncatewords:"100" }}</p>
    </p>
    <hr/>
{% endfor %}
{% for gallery in galleries %}


    <div class="gallery_overview">
        <h3>{{ gallery.title }}</h3>
        {% for galimage in gallery.galimages.all %}
        
        <a class="preview_link" href="./{{ gallery.id }}/{{ galimage.id }}/">
            <img class="preview_image" style="float: left;" src="{{ galimage.base_file.url }}.thumb.jpg"/>
        </a>
        <p class="image_name">{{ galimage.name }}</p>
        
        {% endfor %}
    </div>

{% endfor %}
{% endblock %}
